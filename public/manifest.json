{
  "name": "Instagram Inbox Previewer",
  "description": "Preview Instagram direct messages without opening them.",
  "version": "0.1.0",
  "manifest_version": 3,
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": ["scripting", "tabs"],
  "background": {
    "service_worker": "scripts/serviceWorker.js"
  },
  "content_scripts": [
    {
      "world": "MAIN",
      "js": ["scripts/responseInterceptor.js"],
      "matches": ["*://www.instagram.com/*"],
      "run_at": "document_start"
    },
    {
      "js": ["scripts/responseSender.js"],
      "matches": ["*://www.instagram.com/*"],
      "run_at": "document_start"
    },
    {
      "js": ["scripts/appInjector.js"],
      "matches": ["*://www.instagram.com/*"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["*://www.instagram.com/*"]
    }
  ]
}
